    <title>Password Strength Checker & Generator</title>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            text-align: center;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            padding: 20px;
        }
        .container {
            max-width: 400px;
            margin: auto;
        }
        .box {
            background: white;
            color: black;
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.3);
            margin-top: 20px;
            display: none;
        }
        h1 {
            color: #fff;
        }
        input, button {
            margin: 10px 0;
            padding: 12px;
            width: 100%;
            font-size: 16px;
            border-radius: 8px;
            border: 1px solid #ccc;
            transition: 0.3s;
        }
        button {
            background: #ff6b6b;
            color: white;
            border: none;
            cursor: pointer;
            font-weight: bold;
        }
        button:hover {
            background: #ff4757;
            transform: scale(1.05);
        }
        #strength {
            font-weight: bold;
            font-size: 18px;
        }
        .green { color: green; }
        .orange { color: orange; }
        .red { color: red; }
    </style>
